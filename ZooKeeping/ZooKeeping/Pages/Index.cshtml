@page
@model ZooKeeping.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Zoo Keeping</h1>

<br />
<br />

<p style="text-align: left; margin-left: 10px">
    <a asp-page="Create">Create New</a>
</p>

<div class="divright">
    <form method="post">
        <input id="filter" asp-for = "Filter"  type ="text" placeholder="Search by Name" style="width:250px" />
        <input type="submit" value="Search" onclick="@Model.OnGetAsync()" />
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].GivenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Food)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].FeedingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].CageNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Animal != null)
        {
            @foreach (var item in Model.Animal)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GivenName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Food)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FeedingHour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CageNumber)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
